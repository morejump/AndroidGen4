<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBacground"
    tools:context="com.project.phamhoang.weatherapp.MainActivity">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxHeight="42dp"
           android:maxWidth="42dp"
           android:id="@+id/imageStart"
           android:src="@drawable/cloudy_day_xxx"
           android:scaleType="fitStart"
           android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather App"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/imageStart"
            android:gravity="left"
            android:textColor="@color/white"/>
    <View
        android:layout_below="@+id/imageStart"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHorizontalLine"
        android:id="@+id/horizontalLine1" />
   <RelativeLayout
       android:layout_below="@+id/horizontalLine1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:clickable="true">
       <TextView
           android:id="@+id/tvRelative1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="Hà Nội, Việt Nam"
           android:textSize="25dp"
           android:textColor="@color/white" />
       <TextView
           android:id="@+id/date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="07/06/2016"
           android:textSize="12dp"
           android:layout_below="@+id/tvRelative1"
           android:layout_centerInParent="true"
           android:paddingRight="122dp"
           android:textColor="@color/white"
           />
       <TextView
           android:id="@+id/time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tvRelative1"
           android:text="3:49 PM"
           android:textSize="12dp"
           android:paddingLeft="240dp"
           android:textColor="@color/white"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxWidth="180dp"
           android:maxHeight="180dp"
           android:id="@+id/big_sunny"
           android:layout_below="@+id/date"
           android:paddingLeft="70dp"
           android:paddingTop="10dp"
           android:src="@drawable/sun_xxx" />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:adjustViewBounds="true"

           android:maxHeight="22dp"
           android:maxWidth="22dp"
           android:id="@+id/temperature"
           android:layout_below="@+id/time"
           android:src="@drawable/temperature_2_512"/>
       <ImageView
           android:id="@+id/windy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxWidth="22dp"
           android:maxHeight="22dp"
           android:layout_below="@+id/temperature"
           android:layout_toRightOf="@+id/big_sunny"
           android:src="@drawable/weather_icons_07_windy_512"/>
       <ImageView
           android:id="@+id/rain_drop"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxWidth="22dp"
           android:maxHeight="22dp"
           android:layout_below="@+id/windy"
           android:layout_toRightOf="@+id/big_sunny"
           android:src="@drawable/rain_drop_512"/>
       <ImageView
           android:id="@+id/sun_rise"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxWidth="22dp"
           android:maxHeight="22dp"
           android:layout_below="@+id/rain_drop"
           android:layout_toRightOf="@+id/big_sunny"
           android:src="@drawable/sunrise_512x512"/>
       <ImageView
           android:id="@+id/sun_down"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:maxWidth="22dp"
           android:maxHeight="22dp"
           android:layout_below="@+id/sun_rise"
           android:layout_toRightOf="@+id/big_sunny"
           android:src="@drawable/sundown_512x512"/>


   </RelativeLayout>


</RelativeLayout>
